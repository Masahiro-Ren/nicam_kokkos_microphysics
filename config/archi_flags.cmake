    set(CMAKE_CXX_FLAGS "${CMAKE_CXX_FLAGS} -O3 -DUSE_CUDA")
elseif(ARCHITECTURE STREQUAL "GRACE_HOPPER")
    set(CMAKE_CXX_FLAGS "${CMAKE_CXX_FLAGS} -fast -mp -DUSE_CUDA")
endif()